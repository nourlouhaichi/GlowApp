{% extends 'back/backbase.html.twig' %}

{% block title %}GlowApp{% endblock %}

{% block body %}
<table >
<tr> <th>ID</th><th>Content</th><th>date</th><th></th><th></th></tr>
{% for cm in comments %}

    <tr><th>{{cm.Id()}}</th>
    <th >{{cm.getContenue()}}</th>
    <th>{{ cm.getDatecr()|date('Y-m-d') }}</th>
    <th ><a href="{{path('app_comment_edit', {'id': cm.id}) }}"> modify</a></th>
    <th><form method="post" action="{{ path('app_comment_delete', {'id': cm.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ cm.id) }}">
    <button class="btn">Delete</button>
</form></th>

    </tr>

{% endfor %}
</table>
{% endblock %}
