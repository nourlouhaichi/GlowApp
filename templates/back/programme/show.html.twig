{% extends 'back/backbase.html.twig' %}

{% block title %}Programme{% endblock %}

{% block body %}
    <h1>Programme</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ programme.id }}</td>
            </tr>
            <tr>
                <th>Categorie_pro</th>
                <td>{{ programme.categoriePro }}</td>
            </tr>
            <tr>
                <th>Plan_pro</th>
                <td>{{ programme.planPro }}</td>
            </tr>
            <tr>
                <th>Note_pro</th>
                <td>{{ programme.notePro }}</td>
            </tr>
            <tr>
                <th>Date_pro</th>
                <td>{{ programme.datePro ? programme.datePro|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Prog_img</th>
                <td>
                    {% if programme.image %}
                        <img src="{{ asset('Uploads/Image/'  ~ programme.image) }}" alt="Program Image" style="max-width: 300px; height: auto;">
                    {% else %}
                        No Image
                    {% endif %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_programme_admin_index') }}">back to list</a>
    <a href="{{ path('app_programme_admin_edit', {'id': programme.id}) }}">edit</a>

    {{ include('back/programme/_delete_form.html.twig') }}
{% endblock %}
