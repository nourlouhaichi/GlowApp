{% extends 'back/backbase.html.twig' %}

{% block title %}New User{% endblock %}

{% block body %}
    <br><center><h1 class="mb-3 text-success">Create new User</h1></center>

    {# {{ include('back/user_admin/_form.html.twig') }} #}

    

    <div class="container-fluid pt-4 px-4">
                <div class="row g-4">
                    <div class="col-sm-12 col-xl-6">
                        <div class="bg-light rounded h-100 p-4">
                    {# {{ form_errors(form) }} #}
                {{ form_start(form,{'attr': {'novalidate': 'novalidate'}} ) }}
                    <div class="form-floating mb-3">
                        {{ form_widget(form.lastname, {'attr': {'class': 'form-control', 'id': 'floatingInput', 'placeholder': 'name@example.com'}}) }}
                        <label for="floatingInput">Last Name</label>
                        {{ form_errors(form.lastname) }}  
                    </div>
                    <div class="form-floating mb-3">
                        {{ form_widget(form.firstname, {'attr': {'class': 'form-control', 'id': 'floatingInput', 'placeholder': 'name@example.com'}}) }}
                        <label for="floatingInput">First Name</label>
                        {{ form_errors(form.firstname) }}
                    </div>
                    <div class="form-floating mb-3">
                        {{ form_widget(form.cin, {'attr': {'class': 'form-control', 'id': 'floatingInput', 'placeholder': 'name@example.com'}}) }}
                        <label for="floatingInput">CIN</label>
                        {{ form_errors(form.cin) }}
                    </div>
                    <div class="form-floating mb-3">
                        {{ form_widget(form.gender, {'attr': {'class': 'form-select', 'id': 'genderSelect'}}) }}
                        <label for="floatingInput">Gender</label>
                        {{ form_errors(form.gender) }}
                    </div></div></div>
                    <div class="col-sm-12 col-xl-6">
                        <div class="bg-light rounded h-100 p-4">
                    <div class="form-floating mb-3">
                        {{ form_widget(form.datebirth, {'attr': {'class': 'form-select', 'id': 'dateOfBirth'}}) }}
                        <label for="floatingInput">Date of Birth</label>
                        {{ form_errors(form.datebirth) }}
                    </div>
                    <div class="form-floating mb-3">
                        {{ form_widget(form.phone, {'attr': {'class': 'form-control', 'id': 'floatingInput', 'placeholder': 'name@example.com'}}) }}
                        <label for="floatingInput">Phone</label>
                        {{ form_errors(form.phone) }}
                    </div>
                    <div class="form-floating mb-3">
                        {{ form_widget(form.email, {'attr': {'class': 'form-control', 'id': 'floatingInput', 'placeholder': 'name@example.com'}}) }}
                        <label for="floatingInput">Email address</label>
                        {{ form_errors(form.email) }}
                    </div>
                    <div class="form-floating mb-3">
                        {{ form_widget(form.password, {'attr': {'class': 'form-control', 'id': 'floatingPassword', 'placeholder': 'Password'}}) }}
                        <label for="floatingPassword">Password</label>
                        {{ form_errors(form.password) }}
                    </div>
                
                
    </div></div></div><center><a class="btn btn-warning rounded-pill m-2" href="{{ path('app_user_admin_index') }}">Back to list</a>
    <button type="submit" class="btn btn-success rounded-pill m-2">Create</button></center></div>
    {{ form_end(form) }}

    
{% endblock %}
