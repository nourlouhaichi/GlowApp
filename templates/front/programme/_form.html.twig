<div class="container-fluid page-header py-5">
	<h1 class="text-center text-white display-6">Ajouter un nouveau programme</h1>
</div>
<div class="container-fluid py-5 mt-5 ">
	
		<div class="form-container">
			{{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'form-horizontal'}}) }}

			<div class="form-group">
				{{ form_label(form.categorie_pro, 'Category', {'label_attr': {'class': 'control-label'}}) }}
				{{ form_widget(form.categorie_pro, {'attr': {'class': 'form-control'}}) }}
				{{ form_errors(form.categorie_pro) }}
			</div>

			<div class="form-group">
				{{ form_label(form.plan_pro, 'Plan', {'label_attr': {'class': 'control-label'}}) }}
				{{ form_widget(form.plan_pro, {'attr': {'class': 'form-control'}}) }}
				{{ form_errors(form.plan_pro) }}
			</div>

			<div class="form-group">
				{{ form_label(form.note_pro, 'Note', {'label_attr': {'class': 'control-label'}}) }}
				{{ form_widget(form.note_pro, {'attr': {'class': 'form-control'}}) }}
				{{ form_errors(form.note_pro) }}
			</div>

			<div class="form-group">
				{{ form_label(form.date_pro, 'Date', {'label_attr': {'class': 'control-label'}}) }}
				{{ form_widget(form.date_pro, {'attr': {'class': 'form-control'}}) }}
				{{ form_errors(form.date_pro) }}
			</div>
			<div class="form-group">
				{{ form_label(form.image) }}
				{{ form_widget(form.image) }}
				{{ form_errors(form.image) }}
			</div>

			<button type="submit" class="btn btn-primary">{{ button_label|default('Save') }}</button>

			{{ form_end(form) }}
		</div>
	
</div>
