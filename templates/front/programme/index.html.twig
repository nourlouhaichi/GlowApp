{% extends 'front/basefrontone.html.twig' %}

{% block title %}Programme index
{% endblock %}

{% block body %}
	
		<div class="container-fluid py-5 mt-5"> <div class="container py-5">
			<div class="container-fluid vesitable py-5">
				<div class="container py-5">
					<div class="header_prog">
						<h1 class="fw-bold mb-0">Disponable Programs:</h1>
						<button type="submit" class="btn btn-primary border-2 border-secondary py-3 px-4  rounded-pill text-white h-100">
							<a href="{{ path('app_programme_new') }}" style="color: white">Create new</a>
						</button>
					</div>
					<div class="owl-carousel vegetable-carousel justify-content-center">

						{% for programme in programmes %}
							<div class="border border-primary rounded position-relative vesitable-item"  >
								<div class="vesitable-img">
									<img src="{{ asset('Uploads/Image/' ~ programme.image) }}" class="img-fluid w-100 rounded-top" alt="">

								</div>
								<div class="text-white bg-primary px-3 py-1 rounded position-absolute" style="top: 10px; right: 10px;">Nutritionist/Coach</div>
								<div class="p-4 rounded-bottom">
									<h4>{{ programme.categoriePro }}</h4>
									<p>{{ programme.planPro }}</p>
									<div class="d-flex justify-content-between flex-lg-wrap">
										<p class="text-dark fs-5 fw-bold mb-0">{{programme.categoriePro}}</p>
										<a href="{{ path('app_programme_show', {'id': programme.id}) }}">

											show</a>
										<a href="/objectif/new">

											add objectif</a>
									</div>
								</div>
							</div>

						{% endfor %}
					</div>
				</div>
			</div>
		</div>

	{% endblock %}
