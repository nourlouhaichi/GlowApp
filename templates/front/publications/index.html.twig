<form method="post" action="{{ path('app_publication_new') }}">
    <input type="hidden" name="_token">
    <button class="btn btn-primary">Add new post</button>

</form>

{% for pub in publications %}
<center>

     <div class="toast show" role="alert" aria-live="assertive" aria-atomic="true" >
     
  <div class="toast-header" >
  
    <strong class="me-auto">{{pub.getTitreP()}}</strong><span class="badge bg-secondary">{{pub.gettypep()}}</span>
    <br>
    <small>created {{ pub.getDatecrP()|date('Y-m-d') }}</small>
    
  </div>
  <div class="toast-body">
    {{pub.getContenueP()}}
  </div>
  <form method="post" action="{{ path('app_publication_delete', {'id': pub.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ pub.id) }}">
    <button class="btn btn-primary">Delete</button>
    
</form>
  <form method="post" action="{{ path('app_publication_edit', {'id': pub.id}) }}" onsubmit="return confirm('Are you sure you want to modify this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ pub.id) }}">
    <button class="btn btn-primary">Modify</button>
    
</form>
<br>
<small class="comment-title mt-5"><span id="comment-count"><a href="{{ path('app_publication_show', {'id': pub.id}) }}"">{{pub.comments|length}}</span>comments</a></small>
</div>
</center>


