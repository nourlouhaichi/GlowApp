{% extends 'front/frontbase.html.twig' %}

{% block title %}GlowApp{% endblock %}
{% block body %}
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script>
    $(document).ready(function() {
        $('#success-alert').fadeOut(5000);
        $('#error-alert').fadeOut(5000);
    });
</script>
{% block stylesheets %}
    <style>
        .custom-alert {
            font-size: 14px; 
            padding: 8px 15px; 
            border-radius: 5px; 
            margin: 0 auto; 
            width: fit-content;
            position: fixed;
            top: 50%; 
            left: 50%; 
            transform: translate(-50%, -50%);
            z-index: 9999;
        }

        .alert-success {
            background-color: #d4edda; 
            border-color: #c3e6cb; 
            color: #155724; 
        }

        .alert-warning {
            background-color: #f8d7da;
            border-color: #f5c6cb; 
            color: #721c24; 
        }
    </style>
{% endblock %}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
                <nav class="navbar navbar-light bg-white navbar-expand-xl">
                    <img src="{{asset('front/img/logoglowapp.png')}}" length='150px' width='150px'>
                    <button class="navbar-toggler py-2 px-3" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                        <span class="fa fa-bars text-primary"></span>
                    </button>
                    <div class="collapse navbar-collapse bg-white" id="navbarCollapse">
                        <div class="navbar-nav mx-auto">
                            <a href="{{path('app_home')}}" class="nav-item nav-link active">Home</a>
                            <a href="shop.html" class="nav-item nav-link">Shop</a>
                            <a href="shop-detail.html" class="nav-item nav-link">Events</a>
                            <div class="nav-item dropdown">
                                <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Programs</a>
                                <div class="dropdown-menu m-0 bg-secondary rounded-0">
                                    <a href="cart.html" class="dropdown-item">Nutritionist</a>
                                    <a href="chackout.html" class="dropdown-item">Coach</a>
                                    
                                </div>
                            </div>
                            <a href="{{path('app_publications')}}" class="nav-item nav-link">Publications</a>
                            
                    </div>
<div class="input-group w-50 mx-auto d-flex"> 
    <input class="form-control me-1 py-1 px-0.5" type="search" value="" id="example-search-input" placeholder="search" aria-describedby="search-icon-1" style="font-size: 12px;"> <!-- Adjust 'px-2' to reduce horizontal padding -->
    <span class="input-group-text p-1"> 
        <i class="fa fa-search" aria-hidden="true"></i>
    </span>
</div>
                                
                    <form method="post" action="{{ path('app_publication_new') }}">
    <input type="hidden" name="_token">
    <button class="btn btn-primary">Add new post</button>

</form>
                </nav>
            </div>
        </div>
<br> 
<br>
<br> 
<br>  
<br> 
<br>
<br> 
<br>  
{% for message in app.flashes("success") %}
<div class="alert alert-success custom-alert text-smaller text-center" id="success-alert">
    <i class="fas fa-check-circle"></i>
    <span>{{ message }}</span>
</div>
{% endfor %}

{% for message in app.flashes("error") %}
<div class="alert alert-warning custom-alert text-smaller text-center" id="error-alert">
    <i class="fas fa-exclamation-circle"></i>
    <span>{{ message }}</span>
</div>
{% endfor %}

<div class="tab-content">
    {% set itemCount = publications|length %}
    {% for pub in publications %}
        
        {% if loop.index0 % 3 == 0 %}
        <br>
            <div class="row g-4">
        {% endif %}
        
        <div class="col-md-4 position-relative">
            <div class="item-container" style="height: 500px; position: relative;"> 
                <div id="carouselExampleControls_{{ pub.id }}" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        {% set isFirst = true %}
                        {% for image in pub.images %}
                            <div class="carousel-item {% if isFirst %}active{% endif %}">
                                <img src="{{ asset('/images/publications/' ~ image.name) }}" class="d-block w-100" style="height: 300px; object-fit: cover;" alt="Publication Image">
                            </div>
                            {% set isFirst = false %}
                        {% endfor %}
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls_{{ pub.id }}" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls_{{ pub.id }}" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
                <div class="text-white bg-secondary px-3 py-1 rounded position-absolute" style="top: 10px; left: 10px;">{{ pub.getTypeP() }}</div>
                
                
                <div class="p-4 border border-secondary border-top-0 rounded-bottom" style="height: 200px; overflow: hidden;">
                    <div style="position: absolute; top: 10px; right: 10px;">
                        <a href="{{ path('app_publication_edit', {'id': pub.id}) }}" class="text-white px-1 py-1 rounded"><i class="fas fa-pencil-alt me-2 text-primary"></i></a>
                        <form method="post" action="{{ path('app_publicationcomdelete', {'id': pub.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ pub.id) }}">
                            <button class="text-white px-1 py-1 rounded" style="background-color: transparent; border: none;"><i class="fas fa-trash me-2 text-primary"></i></button>
                        </form>
                    </div>
                    <h4>{{ pub.getTitreP() }}</h4>
                    <p>{{ pub.getContenueP()|slice(0, 100) }}</p>
                    <div class="d-flex justify-content-between flex-lg-wrap">
                        <a href="{{ path('app_publication_show', {'id': pub.id}) }}" class="btn border border-secondary rounded-pill px-3 text-primary"><i class="fas fa-eye me-2 text-primary"></i>Read more</a>
                        <a href="#"><i class="fas fa-comment me-2 text-primary"></i>{{ pub.comments|length }}</a>
                    </div>
                </div>
            </div>
        </div>
        
        {% if loop.index0 % 3 == 2 or loop.last %}
            </div> 
        {% endif %}
    {% endfor %}
     
</div>

<br>
<br>
<br>
<br>

{% block javascripts %}
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

<script>
    $(document).ready(function () {
        $('#example-search-input').on('keyup', function () {
            var searchQuery = $(this).val().toLowerCase();
            $('.col-md-4.position-relative').each(function () {
                var publicationTitle = $(this).find('h4').text().toLowerCase();
                $(this).toggle(publicationTitle.includes(searchQuery));
            });
        });
    });
</script>
{% endblock %}
<center>{{ knp_pagination_render(publications) }}</center>
{% endblock %}