<div class="tab-content">
    {% for pub in publications %}
        {% if loop.index0 % 3 == 0 %}
            <div class="row g-4">
        {% endif %}
        <div class="col-md-4">
            <div class="rounded position-relative fruite-item">
                <div class="fruite-img">
                    <img style="max-width: 100%" src="{{ vich_uploader_asset(pub,'imageFile') }}" class="img-fluid w-100 rounded-top" alt="">
                </div>
                <div class="text-white bg-secondary px-3 py-1 rounded position-absolute" style="top: 10px; left: 10px;">{{pub.getTypeP()}}</div>
                <form method="post" action="{{ path('app_publicationcomdelete', {'id': pub.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ pub.id) }}">
                    <button class="text-white bg-secondary px-1 py-1 rounded position-absolute" style="top: 10px; left: 380px;"><i class="fa fa-trash me-2 text-primary"></i></button>
                </form>
                <form method="post" action="{{ path('app_publication_edit', {'id': pub.id}) }}" onsubmit="return confirm('Are you sure you want to modify this item?');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ pub.id) }}">
                    <button class="text-white bg-secondary px-1 py-1 rounded position-absolute" style="top: 10px; right: 10px;"><i class="fa fa-pencil me-2 text-primary"></i></button>
                </form>
                <div class="p-4 border border-secondary border-top-0 rounded-bottom">
                    <h4>{{pub.getTitreP()}}</h4>
                    <p>{{pub.getContenueP()}}</p>
                    <div class="d-flex justify-content-between flex-lg-wrap">
                        <a href="{{ path('app_publication_show', {'id': pub.id}) }}" class="btn border border-secondary rounded-pill px-3 text-primary"><i class="fa fa-eye me-2 text-primary"></i>Read more</a>
                        <a ><i class="fas fa-comment me-2 text-primary"></i>{{pub.comments|length}}</a>
                    </div>
                </div>
            </div>
        </div>
        {% if loop.index0 % 3 == 2 or loop.last %}
            </div>
        {% endif %}
    {% endfor %}
</div>
 
