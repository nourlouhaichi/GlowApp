{% extends 'front/frontbase.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

<div class="container px-0">
                <nav class="navbar navbar-light bg-white navbar-expand-xl">
                    <a href="{{ path('app_home') }}"><img src="{{asset('front/img/logoglowapp.png')}}" length='150px' width='150px'></a>
                    <button class="navbar-toggler py-2 px-3" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                        <span class="fa fa-bars text-primary"></span>
                    </button>
                    <div class="collapse navbar-collapse bg-white" id="navbarCollapse">
                        <div class="d-flex m-3 me-0">
                        </div>
                    </div>
                </nav>
            </div>
        </div>
        <!-- Navbar End -->
<!-- Sign Up Start --><br><br><br><br><br><br>
<div class="container-fluid">
    <div class="row h-100 align-items-center justify-content-center" style="min-height: 100vh;">
        <div class="col-12 col-sm-8 col-md-6 col-lg-5 col-xl-4">
            <div class="bg-light rounded p-4 p-sm-5 my-4 mx-3">
                <div class="d-flex align-items-center justify-content-between mb-3">
                    <a href="" class="">
                        <h3 class="text-primary"><i class="fas fa-user"></i> Welcome</h3>
                    </a>
                    <h3>Sign Up</h3>
                </div>
                {{ form_errors(registrationForm) }}
                {{ form_start(registrationForm,{'attr': {'novalidate': 'novalidate'}} ) }}
                    <div class="form-floating mb-3">
                        {{ form_widget(registrationForm.lastname, {'attr': {'class': 'form-control', 'id': 'floatingInput', 'placeholder': 'name@example.com'}}) }}
                        <label for="floatingInput">Last Name</label>
                        {{ form_errors(registrationForm.lastname) }}  
                    </div>
                    <div class="form-floating mb-3">
                        {{ form_widget(registrationForm.firstname, {'attr': {'class': 'form-control', 'id': 'floatingInput', 'placeholder': 'name@example.com'}}) }}
                        <label for="floatingInput">First Name</label>
                        {{ form_errors(registrationForm.firstname) }}
                    </div>
                    <div class="form-floating mb-3">
                        {{ form_widget(registrationForm.cin, {'attr': {'class': 'form-control', 'id': 'floatingInput', 'placeholder': 'name@example.com'}}) }}
                        <label for="floatingInput">CIN</label>
                        {{ form_errors(registrationForm.cin) }}
                    </div>
                    <div class="form-floating mb-3">
                        {{ form_widget(registrationForm.gender, {'attr': {'class': 'form-select', 'id': 'genderSelect'}}) }}
                        <label for="floatingInput">Gender</label>
                        {{ form_errors(registrationForm.gender) }}
                    </div>
                    <div class="form-floating mb-3">
                        {{ form_widget(registrationForm.datebirth, {'attr': {'class': 'form-select', 'id': 'dateOfBirth'}}) }}
                        <label for="floatingInput">Date of Birth</label>
                        {{ form_errors(registrationForm.datebirth) }}
                    </div>
                    <div class="form-floating mb-3">
                        {{ form_widget(registrationForm.phone, {'attr': {'class': 'form-control', 'id': 'floatingInput', 'placeholder': 'name@example.com'}}) }}
                        <label for="floatingInput">Phone</label>
                        {{ form_errors(registrationForm.phone) }}
                    </div>
                    <div class="form-floating mb-3">
                        {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control', 'id': 'floatingInput', 'placeholder': 'name@example.com'}}) }}
                        <label for="floatingInput">Email address</label>
                        {{ form_errors(registrationForm.email) }}
                    </div>
                    <div class="form-floating mb-4">
                        {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control', 'id': 'floatingPassword', 'placeholder': 'Password'}}) }}
                        <label for="floatingPassword">Password</label>
                        {# {{ form_errors(registrationForm.plainPassword) }} #}
                    </div>
                    <div class="form-check mb-4">
                        {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input', 'id': 'exampleCheck1'}}) }}
                        <label class="form-check-label" for="exampleCheck1">Check me out</label>
                    </div>
                    <button type="submit" class="btn btn-primary py-3 w-100 mb-4">Sign Up</button>
                {{ form_end(registrationForm) }}
                <p class="text-center mb-0">Already have an Account? <a href="{{ path('app_login') }}">Sign In</a></p>
            </div>
        </div>
    </div>
</div>
<!-- Sign Up End -->



{% endblock %}
