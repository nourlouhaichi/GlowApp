{% extends 'back/backbase.html.twig' %}

{% block title %}Reservation{% endblock %}

{% block body %}
    <h1>Reservation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ reservation.id }}</td>
            </tr>
            <tr>
                <th>FirstName</th>
                <td>{{ reservation.firstName }}</td>
            </tr>
            <tr>
                <th>LastName</th>
                <td>{{ reservation.lastName }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ reservation.phone }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ reservation.email }}</td>
            </tr>
            <tr>
                <th>CreateAt</th>
                <td>{{ reservation.createAt ? reservation.createAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_reservation_admin_index') }}">back to list</a>

    <a href="{{ path('app_reservation_admin_edit', {'id': reservation.id}) }}">edit</a>

    {{ include('reservation_admin/_delete_form.html.twig') }}
